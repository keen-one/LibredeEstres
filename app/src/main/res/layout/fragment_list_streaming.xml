<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorNaranja"
  android:orientation="vertical"
  tools:context=".ListStreaming">
  <TextView
    android:id="@+id/tv_message_list_stream"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/component_margin16"
    android:layout_marginBottom="@dimen/component_margin16"
    android:layout_marginLeft="@dimen/component_margin32"
    android:layout_marginRight="@dimen/component_margin32"
    android:text="@string/message_streaming"
    android:textColor="@color/colorBlanco"
    android:textSize="18sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
  <ListView
    android:id="@+id/list_uri"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/component_margin16"
    android:layout_marginLeft="@dimen/component_margin16"
    android:layout_marginRight="@dimen/component_margin16"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_message_list_stream" />
</LinearLayout>