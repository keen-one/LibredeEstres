<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/colorNaranja"
  android:orientation="vertical">
  <TextView
    android:id="@+id/message_anti_estres"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/component_margin16"
    android:layout_marginBottom="@dimen/component_margin16"
    android:layout_marginLeft="@dimen/component_margin32"
    android:layout_marginRight="@dimen/component_margin32"
    android:text="@string/title_home"
    android:textColor="@color/colorBlanco"
    android:textSize="18sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rv_factor_anti_estres"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/component_margin16"
    android:scrollbars="vertical"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/message_anti_estres" />
</LinearLayout>