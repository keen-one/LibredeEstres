<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">
  <androidx.cardview.widget.CardView
    android:id="@+id/cv_categoria_musical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/component_margin8"
    android:layout_marginLeft="@dimen/component_margin16"
    android:layout_marginRight="@dimen/component_margin16"
    app:cardBackgroundColor="@color/colorMorado"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp">
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/component_margin16">
      <ImageView
        android:id="@+id/iv_categoria_musical"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/todo"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_cafe" />
      <TextView
        android:id="@+id/tv_titulo_categoria_musical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/component_margin16"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_categoria_musical"
        android:text="@string/title_estres"
        android:textColor="@color/colorBlanco"
        android:textSize="18sp" />
    </RelativeLayout>
  </androidx.cardview.widget.CardView>
</LinearLayout>